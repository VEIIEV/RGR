#include <iostream>
#include <stdlib.h>
#include <iomanip>
#define SIZE 6

using namespace std;
int main()
{
    std::cout.setf(ios::fixed);
    int finish = 0;
    int begin_index = 0;
    while ((begin_index > 6) || (begin_index < 1))
    {
        std::cout << " ukazhite adres punkt otpravki ot 1 do 6" << std::endl;
        std::cin >> begin_index;
    }

    while ((finish > 6) || (finish < 1))
        {
        std::cout << " ukazhite adres punkta naznacheniya ot 1 do 6" << std::endl;
            std::cin >> finish;
        }
    float itog[SIZE][SIZE];
    int svyaz[SIZE][SIZE];
    float trafic[SIZE][SIZE];
    int minimum[SIZE];
    int posewenie[SIZE];
    float temp=0;
    int minindex;
    int min;
    for (int i = 0; i < SIZE; i++)
    {
        svyaz[i][i] = 0;
        for (int j = i + 1; j < SIZE; j++) {
            std::cout << "Vvedite rasstoyanie ot " << i + 1 << " goroda do - " << j + 1 << " goroda: " << std::endl;
            std::cin >> temp;
            svyaz[i][j] = temp;
            svyaz[j][i] = temp;
            temp = -1;
            while (( temp> 1) || (temp < 0))
            {
                std::cout << "Vvedite nagryzky dannoi dorogi ot 0.0 do 1.0" << std::endl;
                std::cin >> temp;
            }
            trafic[i][j] = temp;
            trafic[j][i] = temp;
            itog[i][j] = svyaz[i][j] - svyaz[i][j] * trafic[i][j]; itog[j][i] = svyaz[j][i] - svyaz[j][i] * trafic[j][i]; 

        }
    }
    for (int i = 0; i < SIZE; i++)
    {
        for (int j = 0; j < SIZE; j++)
           std::cout<< itog[i][j]<< " ";
        std::cout << std::endl;
    }
    for (int i = 0; i < SIZE; i++)
    {
        minimum[i] = 10000;
        posewenie[i] = 1;
    }
    minimum[ begin_index-1] = 0;
    do {
        minindex = 10000;
        min = 10000;
        for (int i = 0; i < SIZE; i++)
        {
            if ((posewenie[i] == 1) && (minimum[i] < min))
            {
                min = minimum[i];
                minindex = i;
            }
        }
        if (minindex != 10000)
        {
            for (int i = 0; i < SIZE; i++)
            {
                if (itog[minindex][i] > 0)
                {
                    temp = min + itog[minindex][i];
                    if (temp < minimum[i])
                    {
                        minimum[i] = temp;
                    }
                }
            }
            posewenie[minindex] = 0;
        }
    } while (minindex < 10000);

     std::cout << "\nKratchaishee rastoyanie do goroda:" << std::endl;
     std::cout << minimum[finish-1]<< std::endl;

     int ver[SIZE];
       int end = finish-1;
       ver[0] = end + 1;
       int k = 1;
       int weight = minimum[end];

       while (end != begin_index-1)
       {
           for (int i = 0; i < SIZE; i++)
               if (itog[i][end] != 0)
               {
                   int temp = weight - itog[i][end];
                   if (temp == minimum[i])
                   {
                       weight = temp;
                       end = i;
                       ver[k] = i + 1;
                       k++;
                   }
               }
       }
       cout << "\nVivod kratchaishego puti\n";
       cout << ver[begin_index-1] << ">>";
       for (int i = k - 1; i >= 0; i--)
           cout << ver[i] << ">>";
    return 0;
}
